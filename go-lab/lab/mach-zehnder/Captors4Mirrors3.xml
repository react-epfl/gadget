function getScale () {
  var w = parseInt(d3.select("body").style("width")),
      h = parseInt(d3.select("body").style("height"));

  var wScale = w / 900;
  var hScale = h / 500;
  var scale = (wScale < hScale) ? wScale : hScale;
  if (scale < 0.222) scale = 0.222;
  return scale;
}
function resize() {
  var scale = getScale()
  var w = parseInt(d3.select("body").style("width")),
      h = parseInt(d3.select("body").style("height"));

