<Module>
	 <ModulePrefs title="NAAP lab - Habitable Zones Lab - Circumstellar Habitable Zone Simulator"
	 	title_url="https://astro.unl.edu/naap/habitablezones/habitablezones.html"
	 	author="Sten Govaerts"
	 	author_email="sten.govaerts@gmail.com"
	 	description="The NAAP Habitable Zones Lab introduces the basic conditions thought necessary for life to exist, and explores where in the universe those conditions are most likely to be met."
	 	height="765"
	 	screenshot="hl-screenshot-1.png"
	 	thumbnail="https://astro.unl.edu/naap/habitablezones/graphics/stellarHabitableZoneScreenshot.jpg">
	 	<Require feature="opensocial-0.9" />
	 	<Require feature="flash" />
	 </ModulePrefs>
	 <Content type="html">
	 <![CDATA[
	 <script type="text/javascript">
		  // Play .swf file
		  function displayFlash(){
		    var url = "https://astro.unl.edu/naap/habitablezones/animations/stellarHabitableZone.swf";

		    // Play .swf file.
		    gadgets.flash.embedFlash(url, "flashcontainer", {
		      swf_version: 9,
		      id: "stellarHabitableZone",
		      width: 980,
		      height: 765
		    });
		  }

		  // When gadget first loads, display lab.
		  gadgets.util.registerOnLoadHandler(displayFlash);
	 </script>

	 <div id="flashcontainer" style="text-align: center;"></div>
	 ]]>
	 </Content>
 </Module>