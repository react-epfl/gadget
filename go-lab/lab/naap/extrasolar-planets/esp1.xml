	 <Content type="html">
	 <![CDATA[
	 <script type="text/javascript">
		  // Play .swf file
		  function displayFlash(){
		    var url = "https://astro.unl.edu/naap/esp/animations/radialVelocitySimulator.swf";

		    // Play .swf file.
		    gadgets.flash.embedFlash(url, "flashcontainer", {
		      swf_version: 9,
		      id: "radialVelocitySimulator",
		      width: 920,
		      height: 680
		    });
		  }

		  // When gadget first loads, display lab.
		  gadgets.util.registerOnLoadHandler(displayFlash);
