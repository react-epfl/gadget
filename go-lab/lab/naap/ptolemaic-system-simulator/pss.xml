<Module>
	 <ModulePrefs title="NAAP lab - Ptolemaic System Simulator"
	 	title_url="https://astro.unl.edu/naap/ssm/animations/ptolemaic.html"
	 	author="Sten Govaerts"
	 	author_email="sten.govaerts@gmail.com"
	 	description="The NAAP Solar System Models Lab introduces the universe as envisioned by early thinkers culminating in a detailed look at the Copernican model."
	 	height="710"
	 	screenshot="pss-screenshot.png"
	 	thumbnail="https://astro.unl.edu/naap/ssm/animations/ptolemaic_300.jpg">
	 	<Require feature="opensocial-0.9" />
	 	<Require feature="flash" />
	 </ModulePrefs>
	 <Content type="html">
	 <![CDATA[
	 <script type="text/javascript">
		  // Play .swf file
		  function displayFlash(){
		    var url = "https://astro.unl.edu/naap/ssm/animations/ptolemaic.swf";

		    // Play .swf file.
		    gadgets.flash.embedFlash(url, "flashcontainer", {
		      swf_version: 9,
		      id: "ptolemaic",
		      width: 940,
		      height: 710
		    });
		  }

		  // When gadget first loads, display lab.
		  gadgets.util.registerOnLoadHandler(displayFlash);
	 </script>

	 <div id="flashcontainer" style="text-align: center;"></div>
	 ]]>
	 </Content>
 </Module>