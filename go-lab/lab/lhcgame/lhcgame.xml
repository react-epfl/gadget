<Module>
	 <ModulePrefs title="LHC Game"
	 	title_url="https://cern50.web.cern.ch/cern50/multimedia/LHCGame/StartGame.html"
	 	author="Sten Govaerts"
	 	author_email="sten.govaerts+lhcgame@gmail.com"
	 	description="A game that shows how particle accelerators work."
	 	height="835"
	 	screenshot="http://www.learningwithatlas-portal.eu/files/previews/LHC_Game.jpg"
	 	thumbnail="">
	 	<Require feature="opensocial-0.9" />
	 	<Require feature="flash" />
	 </ModulePrefs>
	 <Content type="html">
	 <![CDATA[
	 <script type="text/javascript">
		  // Play .swf file
		  function displayFlash(){
		    var url = "http://www.cernland.net/t/home_nr.swf";

		    // Play .swf file.
		    gadgets.flash.embedFlash(url, "flashcontainer", {
		      swf_version: 9,
		      id: "lhcgame",
		      width: 534,
		      height: 835
		    });
		  }

		  // When gadget first loads, display lhcgame.
		  gadgets.util.registerOnLoadHandler(displayFlash);
	 </script>

	 <div id="flashcontainer" style="text-align: center;"></div>
	 ]]>
	 </Content>
 </Module>