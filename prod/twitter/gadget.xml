<Module>
  <ModulePrefs title="Twitter gadget" 
                author_email="jad.naoum@gmail.com" 
                author="Jad Naoum" 
                description="Widget that retrieves Twitter tweets."
                width="350"
                height="600"
                thumbnail="http://graasp.epfl.ch/gadget/prod/twitter/thumbnail.png"
                screenshot="http://graasp.epfl.ch/gadget/prod/twitter/screenshot.png">
