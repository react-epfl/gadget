<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="Apps view with user tracking"
                author_email="na.li@epfl.ch"
                author="Evgeny Bogdanov, Na Li"
                description="This functional skin takes all apps from a space and shows them in a grid layout that can be adapted to user's needs. It asks for the user name when the user loads the page, and saves the user actions through appdata. At the moment, it works only in Graasp - http://graasp.epfl.ch">
    <Require feature="dynamic-height" />
    <Require feature="shindig-container" />
    
    <Locale messages="http://ask4research.info/golab//gadget/prod/ils_metawidget/message_bundles/ALL_ALL.xml"/>
    <Locale lang="fr" messages="http://ask4research.info/golab//gadget/prod/ils_metawidget/message_bundles/fr_ALL.xml"/>
    <Locale lang="de" messages="http://ask4research.info/golab//gadget/prod/ils_metawidget/message_bundles/de_ALL.xml"/>
    <Locale lang="es" messages="http://ask4research.info/golab//gadget/prod/ils_metawidget/message_bundles/es_ALL.xml"/>
    <Locale lang="ru" messages="http://ask4research.info/golab//gadget/prod/ils_metawidget/message_bundles/ru_ALL.xml"/>
    <Locale lang="th" messages="http://ask4research.info/golab//gadget/prod/ils_metawidget/message_bundles/th_ALL.xml"/>
    <Locale lang="ar" messages="http://ask4research.info/golab//gadget/prod/ils_metawidget/message_bundles/ar_ALL.xml"/>
    <Locale lang="it" messages="http://ask4research.info/golab//gadget/prod/ils_metawidget/message_bundles/it_ALL.xml"/>
    
  </ModulePrefs>
  <Content type="html" view="default,canvas,home,profile"><![CDATA[

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<script type="text/javascript" src="http://ask4research.info/golab//gadget/libs/head.js/head.min.js"></script>

<script type="text/javascript">
//gadgets.util.registerOnLoadHandler(initialize);

head.js ([
"http://ask4research.info/golab//gadget/libs/jquery-1.8.0.min.js",
"http://ask4research.info/golab//gadget/libs/head.js/head.min.js",
"http://ask4research.info/golab//gadget/libs/jquery-ui-1.8.23.custom.min.js",
"http://ask4research.info/golab//gadget/libs/jquery.cookie.js",
"http://ask4research.info/golab//gadget/libs/underscore-min.js",
"http://ask4research.info/golab//gadget/libs/bootstrap3/js/bootstrap.min.js",
"http://ask4research.info/golab//gadget/prod/ils_metawidget/app.js",
"http://ask4research.info/golab//gadget/prod/ils_metawidget/data.js",
"http://ask4research.info/golab//gadget/prod/ils_metawidget/custom.js",
"http://ask4research.info/golab//gadget/libs/bootstrap3/css/bootstrap.css",
"http://ask4research.info/golab//gadget/prod/ils_metawidget/app.css",
"http://ask4research.info/golab//gadget/prod/ils_metawidget/custom.css"],
function(){
if (osapi.people.getViewer) {
  		initialize();
	} else {
  		setTimeout(function(){
   	 		initialize();
  		}, 1000);
	}
	
});


</script>
<div id="main" style="display:none;">
<div id="wrap">
<nav id="myCustomBar" class="navbar navbar-default navbar-fixed-top" role="navigation">
          <div id="customBarWrapper">
          <div class="navbar-header">
            <a id="title" class="dark strong h3" href="#"></a>
          </div>
            <a id = "hello_msg" href="" class="navbar-right dark"></a>   
           </div>
</nav>
<div id="main_block" class="container">
  <div id="container" onmouseover="adjustHeight();">
    <div id="not_owner" style="display:none">__MSG_not_space_owner__</div>
    <div id="popup" style="display:none">
      <div><b>__MSG_app_size__</b>__MSG_fixed_or_relative_resize__</div>
      <div><b>__MSG_drag_and_drop_an_app__</b>__MSG_to_change_the_order__</div>
      <div><b>__MSG_resize_an_app__</b>__MSG_by_dragging_its_right_border__</div>
      <span class="button" onclick="$('#popup').hide()">__MSG_close__</span>
    </div>
    <div id = "description_block">
      <span id = "description"></span>
    </div>
    <div id="center">
      <div id="fauxContainer" class="container"></div>
      <ul class=" nav nav-tabs" id="ils_cycle"></ul>
      <div class="tab-content" id="ils_phases"></div>
    </div>
  </div> <!-- /container -->
</div>
</div>

<div id="toolbar" class="navbar-fixed-bottom">
  <div id="tools_title"><img id="arrow_down" src="arrow_down.png"><img id="arrow_up" src="arrow_up.png"> __MSG_tools__</div>
  <div id="tools_content"></div>
</div>

<div class="modal fade" id="login_popup" data-keyboard="false" data-backdrop="static" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>__MSG_please_enter_your_name__</h3>
            </div>
            <div class="modal-body" id="popup_body">
                <div id="error_msg" class="alert fade in hide alert-danger">  
                    __MSG_please_enter_a_valid_name__
                </div> 
                <input type="text" id="user_name">
            </div>
            <div class="modal-footer" id="popup_footer">
                <button type="button" class="btn btn-primary" id="ok_btn">__MSG_ok__</button>
            </div>
        </div>
    </div>
</div>
</div>
<div id="loader" style="position:relative;top:25%;margin-left:auto;margin-right:auto;width:320px;">
    <img width="320" id="loader-image" class="centered" src="http://ask4research.info/golab//gadget/prod/ils_metawidget/golab_logo_big.gif">
</div>
  ]]></Content>
</Module>
