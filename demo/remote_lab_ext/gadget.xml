<script type="text/javascript">
var isOwner = false;
var my = {};

// gets the data and calls build for container
  var initialize = function() {

  // This container lays out and renders gadgets itself.

  my.LayoutManager = function() {
    shindig.LayoutManager.call(this);
  };

  my.LayoutManager.inherits(shindig.LayoutManager);

  my.LayoutManager.prototype.getGadgetChrome = function(gadget) {
    var chromeId = 'gadget-chrome-' + gadget.id;
    return chromeId ? document.getElementById(chromeId) : null;
  };

  shindig.container.layoutManager = new my.LayoutManager();

  var gadgets = [{"appUrl":"https://shindig2.epfl.ch/gadget/remote_experimentation/wi3.xml","parentType":"@space","id":"539","parentId":"336","profileUrl":"https://shindig2.epfl.ch/#item=widget_539","updated":"2011-03-29T09:08:16.000Z","description":"\u003cp\u003etest video streaming from LabVIEW serveur\u003c/p\u003e","objectId":539,"name":"LV video streaming m1","thumbnailUrl":"https://shindig2.epfl.ch/widget/picture/539/thumb/a.mjpg.jpeg","displayName":"LV video streaming m1","appType":"WidgetGadget","filterCapability":{}},{"appUrl":"https://shindig2.epfl.ch/gadget/remote_experimentation/s.xml","parentType":"@space","id":"672","parentId":"336","profileUrl":"https://shindig2.epfl.ch/#item=widget_672","updated":"2011-03-30T19:24:08.000Z","objectId":672,"name":"Slides","thumbnailUrl":"https://shindig2.epfl.ch/widget/picture/672/thumb/Screen_shot_2011-03-30_at_9.23.28_PM.png","displayName":"Slides","appType":"WidgetGadget","filterCapability":{}},{"appUrl":"https://shindig2.epfl.ch/gadget/remote_experimentation/wi.xml","parentType":"@space","id":"673","parentId":"336","profileUrl":"https://shindig2.epfl.ch/#item=widget_673","updated":"2011-04-05T07:15:17.000Z","objectId":673,"name":"Data","thumbnailUrl":"https://shindig2.epfl.ch/widget/picture/673/thumb/Screen_shot_2011-04-05_at_9.14.36_AM.png","displayName":"Data","appType":"WidgetGadget","filterCapability":{}},{"appUrl":"https://shindig2.epfl.ch/gadget/remote_experimentation/b.xml","parentType":"@space","id":"674","parentId":"336","profileUrl":"https://shindig2.epfl.ch/#item=widget_674","updated":"2011-04-05T07:16:07.000Z","objectId":674,"name":"Save RSS","thumbnailUrl":"https://shindig2.epfl.ch/widget/picture/674/thumb/Screen_shot_2011-04-05_at_9.15.39_AM.png","displayName":"Save RSS","appType":"WidgetGadget","filterCapability":{}},{"appUrl":"https://shindig2.epfl.ch/gadget/prod/rss/gadget.xml","parentType":"@space","id":"691","parentId":"336","profileUrl":"https://shindig2.epfl.ch/#item=widget_691","updated":"2011-04-10T19:34:04.000Z","objectId":691,"name":"RSS feed reader","thumbnailUrl":"https://shindig2.epfl.ch/widget/picture/691/thumb/rss.jpg","displayName":"RSS feed reader","appType":"WidgetGadget","filterCapability":{}}]

  build(gadgets);

  

};

// build the container with gadgets
var build = function(my_gadgets){

  var left = document.getElementById('left');
  var right = document.getElementById('right');
  for (var i = 0; i < my_gadgets.length; i++) {
    var gadget_data = my_gadgets[i];
   
    //only show opensocial gadgets
    if(gadget_data.appType != "WidgetGadget")
      continue;
    
    var gadget = shindig.container.createGadget(
        {specUrl: gadget_data.appUrl, height: '400px'});
        
    gadget.setServerBase("https://shindig2.epfl.ch/gadgets/");

    shindig.container.addGadget(gadget);
    
    var gadget_el = document.createElement('div');
    gadget_el.id = 'gadget-chrome-'+(gadget.id);
    gadget_el.setAttribute('class','gadget');
    if(i % 2 == 0){
      left.appendChild(gadget_el);    
    }else{
      right.appendChild(gadget_el);
    }
        

    shindig.container.setView("home");
    shindig.container.setParentUrl("http://"+location.host);
    shindig.container.renderGadget(gadget);
  }
  
  // resize the gadget
  gadgets.window.adjustHeight();

};

</script>

<script type="text/javascript">
gadgets.util.registerOnLoadHandler(initialize);
</script>

