<?xml version="1.0" encoding="UTF-8"?>
<Module>
<ModulePrefs title="Vertical Wind Turbine Lab"
              author_email="vishnu3649m@gmail.com"
              author="Nachiappan Muthiah"
              description="Control the fan speed and observe the wind speed and the voltage generated by the turbine!"
              height="900"
              scrolling="true">
    <Require feature="opensocial-0.9"/>
    <Require feature="osapi"/>
    <Require feature="dynamic-height"/>
</ModulePrefs>
<Content type="html"><![CDATA[
  <html ng-app="WebsocketClient">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport"
          content="user-scalable=no, 
          initial-scale=1, 
          maximum-scale=1, 
          minimum-scale=1, 
          width=device-width, 
          target-densitydpi=device-dpi"/>
          
    <title>Vertical Wind Turbine Lab</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="jquery.jqplot.css" />
    <link rel="stylesheet" type="text/css" href="app.css" />

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/headjs/1.0.3/head.min.js"></script>
    <script type="text/javascript">
      var pathToGadget = "https://shindig2.epfl.ch/gadget/demo/vwt/";
      head.load("https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.1/jquery.js",
        "https://shindig2.epfl.ch/gadget/libs/jquery.cookie.js",
        "https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.0/angular.js",
        "https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.0/angular-resource.js",
        "https://cdnjs.cloudflare.com/ajax/libs/socket.io/0.9.16/socket.io.min.js",
        "https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore.js",
        "https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js",
        "https://cdnjs.cloudflare.com/ajax/libs/angular-moment/0.8.3/angular-moment.min.js",
        "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js",
        "https://shindig2.epfl.ch/ils/main/ils_graaspeu.js",
        pathToGadget + "vwt.module.js",
        pathToGadget + "vwt.spaces.service.js",
        pathToGadget + "vwt.controller.js",
        pathToGadget + "vwt.backImg.directive.js",
        pathToGadget + "jquery.jqplot.js");
    </script>
  </head>
  <body>
    <div ng-controller="WebsocketClient" ng-init="init();">
        <div class=container>
          <div class="header">
      <h2>Vertical Axis Wind Turbine Lab</h2> 
      <p>Control the fan speed and observe the wind speed and the voltage generated by the turbine! </p>
    </div>

    <div class="row"> <!-- Lab status & control div -->
      <div class="col-sm-5">
        <div class="row text-center">   <!-- video div -->
          <img src="http://128.178.5.183/image.jpg" id="labVideo" alt="VIDEO" class="img-responsive center-block img-rounded" style="width: 240px; height: 180px" />
          <script type="text/javascript">
             window.onload = function() {
              setInterval(updateImage, 100);
             }
             var image = document.getElementById("labVideo");
             function updateImage() {
              image.src = image.src.split("?")[0] + "?" + new Date().getTime();
             }
          </script>
        </div>
      </div>

      <div class="col-sm-7">    <!-- control buttons div -->

        <div class="row">
          <div class="col-sm-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Enter IP" ng-model="host">
                <span class="input-group-btn">
                    <button class="btn btn-default" ng-click="connectToLab(host)" type="button">Connect!</button>
                  </span>
              </div>    <!-- /input-group -->
          </div>
          <div class="col-sm-6">
            <span ng-show="labStatus" class="label label-success">Connected To Remote Lab!</span>
            <span ng-show="!labStatus" class="label label-danger">Lab is not connected!</span>
          </div>
        </div> 

        <div class="row top-buffer">
          <div ng-show="infoMsg" class="col-sm-12 text-center">
            <span ng-show="voltageReadingStatus" class="label label-success">Voltage Reading In Progress</span>
            <span ng-show="!voltageReadingStatus" class="label label-danger">Voltage Reading Not In Progress</span>
            <span ng-show="windSourceStatus" class="label label-success">Wind Source On</span>
            <span ng-show="!windSourceStatus" class="label label-danger">Wind Source Off</span>
          </div>
          <div ng-show="errorMsg" class="col-sm-12 alert alert-danger">
            <p ng-bind-template="{{errMessage}}">
              Error!
            </p>
          </div>
        </div>     

        <div class="row top-buffer">
          <div class="col-sm-4">
            <strong>Voltage Reading:</strong>
          </div>
          <div class="col-sm-4">
            <button class="btn btn-success btn-block" ng-click="runReading()">
              Run
            </button>
          </div>
          <div class="col-sm-4">
            <button class="btn btn-danger btn-block" ng-click="stopReading()">
              Stop
            </button>
          </div>
        </div>

        <div class="row top-buffer">
          <div class="col-sm-4">
            <strong>Wind source:</strong>
          </div>
          <div class="col-sm-4">
            <button class="btn btn-success btn-block" ng-click="turnOnWind()">
              Turn On
            </button>
          </div>
          <div class="col-sm-4">
            <button class="btn btn-danger btn-block" ng-click="turnOffWind()">
              Turn Off
            </button>
          </div>
        </div>
      </div>                <!-- control buttons div -->
    </div>      <!-- Lab status & control div -->

    <hr/>         

    <div class="row">         <!-- numeric values div -->
      <div class="col-sm-4">
        <strong class="text-danger" ng-bind-template="Voltage Amplitude: {{voltageAmplitudeValue}}"></strong>     
      </div>
      <div class="col-sm-4">
        <strong class="text-danger" ng-bind-template="Voltage Frequency: {{voltageFrequency}}"></strong>  
      </div>              
      <div class="col-sm-4">
        <strong class="text-danger" ng-bind-template="Samples Taken: {{numSamples}}"></strong>  
      </div>              
    </div>                <!-- numeric values div -->

    <div id="chartdiv" class="row text-center">         <!-- voltage plot div -->

    </div>                <!-- voltage plot div -->

    <div ng-show="activateGraph" class="row text-center">
      <button class="btn btn-primary" ng-click="graphScrollLeft()">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </button>
      <button class="btn btn-primary" ng-click="graphScrollRight()">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </button>
    </div>                <!-- voltage plot div -->
        </div>
    </div>
    <script>
      head.ready(function () {
        //Scripts loaded
      });
    </script>
  </body>
  </html>
]]></Content>
</Module>
